@model IEnumerable<ozo.Models.Radnik>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Kategorija)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Osoba)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Kategorija.Naziv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Osoba.Prezime)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RadnikId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RadnikId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RadnikId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
