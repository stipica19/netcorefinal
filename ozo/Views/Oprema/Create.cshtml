@model ozo.Models.Oprema


@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">Dodavanje nove opreme</h1>

<hr />



<form asp-action="Create" method="post">
    <div asp-validation-summary="All"></div>


    <div class="form-group">
        <label asp-for="InventarniBroj">Inventarni broj</label>
        <div><span asp-validation-for="InventarniBroj" class="text-danger" /></div>
        <input asp-for="InventarniBroj" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Naziv"></label>
        <div><span asp-validation-for="Naziv" class="text-danger" /></div>
        <input asp-for="Naziv" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="NabavnaCijena">Nabavna cijena</label>
        <div><span asp-validation-for="NabavnaCijena" class="text-danger" /></div>
        <input asp-for="NabavnaCijena" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="KnjigovostvenaVrijednost">Knjigovostvena vrijednost</label>
        <div><span asp-validation-for="KnjigovostvenaVrijednost" class="text-danger" /></div>
        <input asp-for="KnjigovostvenaVrijednost" class="form-control" />
    </div>


    <div class="form-group">
        <label asp-for="ReferentniTipOpremeId">Referentni tip opreme</label><label style="font-size:12px; float:right;">*autocomplete</label>
        <div><span asp-validation-for="ReferentniTipOpremeId" class="text-danger"></span></div>
        <input class="form-control" data-autocomplete="Oprema"
               data-autocomplete-result="imevrste"
               value="" />
        <input type="hidden" asp-for="ReferentniTipOpremeId" data-autocomplete-result="imevrste" />
    </div>

    <div class="form-group">
        <label asp-for="LokacijaOpremeId">Lokacija opreme</label>
        <div><span asp-validation-for="LokacijaOpremeId" class="text-danger" /></div>
        <select class="form-control" asp-for="LokacijaOpremeId" asp-items="ViewBag.LokacijaOpreme">
            <option disabled selected value="">Odaberite lokaciju opreme</option>
        </select>
    </div>

    <div class="form-group">

        <label asp-for="StatusId">Status</label>
        <div><span asp-validation-for="StatusId" class="text-danger" /></div>
        <select class="form-control" asp-for="StatusId" asp-items="ViewBag.StatusOpreme">
            <option disabled selected value="">Odaberite status opreme</option>
        </select>

    </div>

    <hr />
    <div class="text-center">
        <button class="btn btn-primary btn-lg" type="submit"><span class="glyphicon glyphicon-plus"></span> Dodaj</button>
        <a asp-action="" class="btn btn-danger btn-lg"><span class="glyphicon glyphicon-remove"></span> Odustani</a>
    </div>
</form>
<br/>
<div class="text-center">
    <a asp-action="Index" >Nazad na listu</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/lib/jquery-ui/jquery-ui.js"></script>

    <script src="~/js/autocomplete.js"></script>

}
@section styles{
    <link rel="stylesheet" href="~/lib/jquery-ui/themes/base/jquery-ui.css" />
}


