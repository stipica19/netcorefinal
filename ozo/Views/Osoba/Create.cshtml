@model ozo.Models.ViewOsoba


@{
    ViewData["Title"] = "Dodavanje nove osobe";
}

<h1 class="text-center">Dodavanje nove osobe</h1>


<hr />

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Ime" class="control-label"></label>
        <input asp-for="Ime" class="form-control" />
        <span asp-validation-for="Ime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Prezime" class="control-label"></label>
        <input asp-for="Prezime" class="form-control" />
        <span asp-validation-for="Prezime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CertifikatId">Certifikat</label>
        <div><span asp-validation-for="CertifikatId" class="text-danger" /></div>
        <select class="form-control" asp-for="CertifikatId" asp-items="ViewBag.StatusOpreme">
            <option disabled selected value="">Odaberite certifikat za osobu</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="ZanimanjeId">Certifikat</label>
        <div><span asp-validation-for="ZanimanjeId" class="text-danger" /></div>
        <select class="form-control" asp-for="ZanimanjeId" asp-items="ViewBag.ZanimanjeList">
            <option disabled selected value="">Odaberite zanimanje za osobu</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="God_rodjenja" class="control-label">Godina rođenja</label>
        <input asp-for="God_rodjenja" class="form-control" />
        <span asp-validation-for="God_rodjenja" class="text-danger"></span>
    </div>
    <div class="text-center">
        <button class="btn btn-primary btn-lg" type="submit"><span class="glyphicon glyphicon-plus"></span> Dodaj</button>
        <a asp-action="" class="btn btn-danger btn-lg"><span class="glyphicon glyphicon-remove"></span> Odustani</a>
    </div>
</form>

<br/>
<div class="text-center">
    <a asp-action="Index">Vrati se nazad</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


