@model ozo.Models.Servis

@{
    ViewData["Title"] = "Edit";
}



<h1>Uređivanje servisa</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ServisId" />
            <div class="form-group">
                <label asp-for="ServiserId">Serviser </label>
                <div><span asp-validation-for="ServiserId" class="text-danger" /></div>
                <select class="form-control" asp-for="ServiserId" asp-items="ViewBag.ServiserList">
                    <option disabled selected value="">Odaberite servisera</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="OpremaId">Oprema </label>
                <div><span asp-validation-for="OpremaId" class="text-danger" /></div>
                <select class="form-control" asp-for="OpremaId" asp-items="ViewBag.OpremaList">
                    <option disabled selected value="">Odaberite Opremu</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="OsobaId">Osoba</label><label style="font-size:12px; float:right;">*autocomplete</label>
                <div><span asp-validation-for="OsobaId" class="text-danger"></span></div>
                <input class="form-control" data-autocomplete="Servis"
                       data-autocomplete-result="imeosobe"
                       value="" />
                <input type="hidden" asp-for="OsobaId" data-autocomplete-result="imeosobe" />
            </div>

            <div class="form-group">
                <label asp-for="Opis"></label>
                <div><span asp-validation-for="Opis" class="text-danger" /></div>
                <input asp-for="Opis" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Cijena"></label>
                <div><span asp-validation-for="Cijena" class="text-danger" /></div>
                <input asp-for="Cijena" class="form-control" />
            </div>
            <div class="text-center">
                <button class="btn btn-primary btn-lg" type="submit"><span class="glyphicon glyphicon-plus"></span> Dodaj</button>
                <a asp-action="" class="btn btn-danger btn-lg"><span class="glyphicon glyphicon-remove"></span> Odustani</a>
            </div>
        </form>
    </div>
</div>
<br/>
<div>
    <a asp-action="Index">Nazad na listu</a>
</div>

